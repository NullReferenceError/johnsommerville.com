@page
@model johnsommerville.com.Pages.AccountInfoModel
@{
    ViewData["Title"] = "AccountInfo";
}
<div class="container">
    <div class="row">
        <div class="col-xs-12">
            @if (!User.Identity.IsAuthenticated)
            {
                <a asp-action="Login" asp-controller="Account" class="btn btn-default">Log In with GitHub</a>
            }
            else
            {
                <div class="row">
                    Looks like you authenticated with github.  Here's some things we know about you now:
                </div>
                <div class="row">
                    <div class="col-md-2">
                        <img src="@Model.GitHubAvatar" alt="" class="img-thumbnail" />
                    </div>
                    <div class="col-md-10">
                        <h4>@Model.GitHubName</h4>
                        <p><i class="fab fa-github"></i><a href="@Model.GitHubUrl">@Model.GitHubLogin</a></p>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
@page
@model johnsommerville.com.Pages.ExperienceModel
@{
    ViewData["Title"] = "Experience";
}
<h1 class="display-4">Experience</h1>

@foreach(var employer in Model.Employers.OrderByDescending(u => u.StartDate))
{
<div class="container">
    <div class="h2">@employer.JobTitle</div>
    <div class="h3">@employer.EmployerName</div>
    <div>@employer.StartDate.ToString("MMMM yyyy") - @(employer.EndDate.HasValue ? employer.EndDate.Value.ToString("MMMM yyyy") : "Current")</div>
    <ul>
        @foreach (var responsibility in employer.Responsibilities)
        {
            <li>@responsibility</li>
        }
    </ul>
</div>
}
